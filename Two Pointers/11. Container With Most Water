class Solution {
    public int maxArea(int[] height) {
        
        int maxArea = 0;
        int l = 0, r = height.length - 1;
        while(l < r){
            int area = (r - l) * Math.min(height[l], height[r]);
            if( height[r] > height[l]){
                l++;
            } else {
                r--;
            }
            maxArea = Math.max(area, maxArea);
        } 
        return maxArea;
    }
}
