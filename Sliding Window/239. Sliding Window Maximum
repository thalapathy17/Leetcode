class Solution {
    public int[] maxSlidingWindow(int[] nums, int k) {
        
        int n = nums.length;
        int[] ans = new int[n - k + 1];
        int l = 0, r = 0;
        Deque<Integer> q = new ArrayDeque<>();

        while(r < n){
            while(!q.isEmpty() && nums[q.peekLast()] < nums[r]){
                q.pollLast();
            }
            q.addLast(r);
            if(!q.isEmpty() && q.peekFirst() < l){
                q.pollFirst();
            }
            if(r + 1 >= k){
                ans[l] = nums[q.peekFirst()];
                l++;
            }
            r++;
        }
        return ans;
    }
}
