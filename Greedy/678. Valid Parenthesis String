class Solution {
    public boolean checkValidString(String s) {
        
        int maxVal = 0, minVal = 0;
        for(int i = 0; i < s.length(); i++){
            if(s.charAt(i) == '('){
                minVal++;
                maxVal++;
            } else if(s.charAt(i) == ')'){
                minVal--;
                maxVal--;
            } else {
                minVal--;
                maxVal++;
            }
            if(maxVal < 0) return false;
            if(minVal < 0) minVal = 0;
        }
        return minVal == 0;
    }
}
