class Solution {
    public boolean isNStraightHand(int[] hand, int groupSize) {

        Map<Integer, Integer> map = new HashMap<>();
        for(int x: hand){
            map.put(x, map.getOrDefault(x, 0) + 1);
        }   

        Arrays.sort(hand);
        for(int x: hand){
            if(map.get(x) == null || map.get(x) == 0) continue;

            for(int i = x; i < x + groupSize; i++){
                if(map.get(i) == null || map.get(i) == 0){
                    return false;
                }
                map.put(i, map.get(i) - 1);
            }
        }
        return true;
    }
}

OR

class Solution {
    public boolean isNStraightHand(int[] hand, int groupSize) {
        
        TreeMap<Integer, Integer> map = new TreeMap<>();
        for(int x: hand){
            map.put(x, map.getOrDefault(x, 0) + 1);
        }
        while(!map.isEmpty()){
            int y = map.firstKey();
            for(int j = y; j < y + groupSize; j++){
                Integer cnt = map.get(j);
                if(cnt == null) return false;
                if(cnt == 1) map.remove(j);
                else map.put(j, cnt - 1);
            }
        }
        return true;
    }
}
