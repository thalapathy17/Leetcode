class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int totalGas = 0;
        for(int gs : gas){
            totalGas += gs;
        }
        int totalCost = 0;
        int res = 0;
        int total = 0;
        for(int cst: cost){
            totalCost += cst;
        }
        if(totalGas < totalCost) return -1;
        for(int i= 0; i < cost.length; i++){
            total +=  gas[i] - cost[i];
            if(total < 0){
                total = 0;
                res = i + 1;
            }
        }
        return res;   
    }
}
