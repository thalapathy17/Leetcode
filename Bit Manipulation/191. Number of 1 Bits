class Solution {
    public int hammingWeight(int n) {
        int res = 1;
        while(n > 1){
            res += n % 2;
            n /= 2;
        }
        return res;
    }
}

OR 

class Solution {
    public int hammingWeight(int n) {
        int res = 0;
        while(n != 0){
            res += n & 1;
            n = n >> 1;
        }
        return res;
    }
}
