class Solution {
    public int[] countBits(int n) {
        
        int[] dp = new int[n + 1];
        Arrays.fill(dp, 0);
        int offset = 1;
        for(int i = 1; i < n + 1; i++){
            if(offset*2 == i){
                offset = i;
            }
            dp[i] = 1 + dp[i - offset];
        }
        return dp;
    }
}

OR

class Solution {
    public int[] countBits(int n) {
        int[] res = new int[n+1];
        for(int i = 0; i <= n; i++){
            res[i] = res[i >> 1] + (i & 1);
        }
        return res;
    }
}
