class Solution {
    public int lastStoneWeight(int[] stones) {
        
        PriorityQueue<Integer> maxH = new PriorityQueue<>(Collections.reverseOrder());

        for(int stone: stones){
            maxH.add(stone);
        }

        while(maxH.size() > 1){
            int y = maxH.poll();
            int x = maxH.poll();
            maxH.add(y - x);
        }

        return maxH.size() == 1 ? maxH.peek() : 0;
    }
}
