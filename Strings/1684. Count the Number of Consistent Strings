class Solution {
    public int countConsistentStrings(String allowed, String[] words) {
        Set<Character> set = new HashSet<>();
        int res = words.length;
        for(char c: allowed.toCharArray()){
            set.add(c);
        }

        for(String word: words){
            for(char c: word.toCharArray()){
                if(!set.contains(c)){
                    res--;
                    break;
                }
            }
        }
        return res;
    }
}
