class Solution {
    public int lenLongestFibSubseq(int[] arr) {
        int res = 0;
        Set<Integer> set = new HashSet<>();
        for(int num: arr){
            set.add(num);
        }        

        for(int i = 0; i < arr.length - 1; i++){
            for(int j = i + 1; j < arr.length; j++){
                int prev = arr[i];
                int curr = arr[j];
                int nxt = prev + curr;
                int count = 2;
                while(set.contains(nxt)){
                    count += 1;
                    prev = curr;
                    curr = nxt;
                    nxt = prev + curr;
                    res = Math.max(res, count);
                }
            }
        }
        return res;
    }
}
