class Solution {
    public boolean canFinish(int numCourses, int[][] prerequisites) {

        int[] visited = new int[numCourses + 1];
        List<Integer> adj[] = new ArrayList[numCourses +1];
        for(int i = 0; i < numCourses; i++){
            adj[i] = new ArrayList<>();
        }
        for(int[] prerequisite : prerequisites){
            adj[prerequisite[0]].add(prerequisite[1]);
        }
        for(int i = 0; i < numCourses; i++){
            if(!helper(adj, i, visited)){
                return false;
            }
        }
        return true;
    }

    private boolean helper(List<Integer> adj[], int index, int[] visited){
        if(visited[index] == 2){
            return true;
        }
        if(visited[index] == 1){
            return false;
        }
        visited[index] = 1;
        for(int nei: adj[index]){
            if(!helper(adj, nei, visited)){
                return false;
            }
        }
        visited[index] = 2;
        return true;
    }
}
