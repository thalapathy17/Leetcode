class Solution {
    List<List<Integer>> res = new ArrayList<>();
    public List<List<Integer>> combinationSum(int[] candidates, int target) {

        helper(0, candidates, target, new ArrayList<>());
        return res;   
    }

    private void helper(int ind, int[] candidates, int target, List<Integer> temp){
        if(ind == candidates.length){
            if(target == 0){
                res.add(new ArrayList<>(temp));
            }
            return;
        }
        if(candidates[ind] <= target){
            temp.add(candidates[ind]);
            helper(ind, candidates, target - candidates[ind], temp);
            temp.remove(temp.size() - 1);
        }
        helper(ind + 1, candidates, target, temp);
    }
}
