class Solution {
    List<List<Integer>> res = new ArrayList<>();
    public List<List<Integer>> subsets(int[] nums) {
        
        helper(0, nums, new ArrayList<>());
        return res;
    }

    private void helper(int ind, int[] nums, List<Integer> temp){
        if(ind == nums.length){
            res.add(new ArrayList<>(temp));
            return;
        }
        temp.add(nums[ind]);
        helper(ind + 1, nums, temp);
        temp.remove(temp.size() - 1);
        helper(ind + 1, nums, temp);
    }
}



class Solution {

    public List<List<Integer>> subsets(int[] nums) {
        List<List<Integer>> ans = new ArrayList<>();
        helper(ans, 0, nums, new ArrayList<>());
        return ans;
    }

    public void helper(List<List<Integer>> ans, int start, int[] nums, List<Integer> runningList) {
            ans.add(new ArrayList<>(runningList));
        // add the element and start the  recursive call
            for(int i = start; i<nums.length; i++) {
                runningList.add(nums[i]);
            helper(ans, i + 1, nums, runningList);
            // remove the element and do the backtracking call.
            runningList.remove(runningList.size() - 1);
            }
            
        }
}

