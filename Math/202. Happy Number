class Solution {
    public boolean isHappy(int n) {
        
        Set<Integer> set = new HashSet<>();
        while(!set.contains(n)){
            set.add(n);
            n = checkHappy(n);

            if(n == 1) return true;
        }
        return false;
    }

    private int checkHappy(int n){

        int res = 0;
        while(n > 0){
            int temp = n % 10;
            res = res + temp*temp;
            n = n/10;
        }
        
        return res;
    }
}
